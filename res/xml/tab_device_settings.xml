<preference-headers
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Crystal -->
    <header android:id="@+id/crystal_rom"
        android:title="@string/crystal_title" />

    <!-- CRSettings -->
    <header
        android:id="@+id/cr_settings"
        android:fragment="com.android.settings.CRSettings"
        android:title="@string/crystal_title"
        android:icon="@drawable/ic_action_set" />

    <!-- Dark UI -->
    <header
        android:id="@+id/theme_settings"
        android:fragment="com.android.settings.slim.themes.ThemeSettings"
        android:icon="@drawable/ic_settings_theme"
        android:title="@string/theme_settings_title" />

    <!-- Performance -->
    <header
        android:id="@+id/performance_settings"
        android:fragment="com.android.settings.cyanogenmod.PerformanceSettings"
        android:icon="@drawable/ic_settings_performance"
        android:title="@string/performance_settings_title" />

    <!-- Launcher -->
    <header
        android:id="@+id/launcher_settings"
        android:title="@string/launcher_settings_title"
        android:icon="@drawable/ic_settings_cmlauncher" />

    <!-- Partition info -->
    <header
        android:icon="@drawable/ic_settings_data_usage"
        android:title="@string/partition_info_title">
        <intent
            android:action="com.android.action.MAIN"
            android:targetPackage="com.android.settings"
            android:targetClass="com.android.settings.crystalroms.PartitionInfo" />
    </header>

    <!-- PERSONALIZATION section -->
    <header android:title="@string/header_personal" />

    <!-- Display -->
    <header
        android:id="@+id/display_settings"
        android:icon="@drawable/ic_settings_display"
        android:fragment="com.android.settings.DisplaySettings"
        android:title="@string/display_settings" />

    <!-- Sound -->
    <header
        android:id="@+id/sound_settings"
        android:icon="@drawable/ic_settings_sound"
        android:fragment="com.android.settings.SoundSettings"
        android:title="@string/sound_settings" />

    <!-- Development -->
    <header
        android:id="@+id/development_settings"
        android:fragment="com.android.settings.DevelopmentSettings"
        android:icon="@drawable/ic_settings_development"
        android:title="@string/development_settings_title" />

    <!-- Print -->
    <header
        android:id="@+id/print_settings"
        android:fragment="com.android.settings.print.PrintSettingsFragment"
        android:icon="@*android:drawable/ic_print"
        android:title="@string/print_settings" />

    <!-- Accessibility feedback -->
    <header
        android:id="@+id/accessibility_settings"
        android:fragment="com.android.settings.accessibility.AccessibilitySettings"
        android:icon="@drawable/ic_settings_accessibility"
        android:title="@string/accessibility_settings" />

    <!-- JBMP -->
    <header android:title="@string/header_input" />

    <!-- Language -->
    <header
        android:id="@+id/language_settings"
        android:fragment="com.android.settings.inputmethod.InputMethodAndLanguageSettings"
        android:icon="@drawable/ic_settings_language"
        android:title="@string/language_settings" />

</preference-headers>
