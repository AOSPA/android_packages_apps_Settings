<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="adaptive_playback"
    android:title="@string/adaptive_playback">

    <com.android.settings.widget.VideoPreference
        android:key="adaptive_playback_video"
        android:title="@string/summary_placeholder"
        settings:animation="@raw/adaptive_playback"
        settings:preview="@drawable/adaptive_playback"
        settings:controller="com.android.settings.widget.VideoPreferenceController" />

    <com.android.settingslib.widget.LayoutPreference
        android:key="adaptive_playback_switch"
        android:layout="@layout/styled_switch_bar"
        settings:allowDividerAbove="true" />

    <com.android.settings.widget.RadioButtonPreference
        android:key="adaptive_playback_timeout_30secs"
        android:title="@string/adaptive_playback_timeout_30secs" />

    <com.android.settings.widget.RadioButtonPreference
        android:key="adaptive_playback_timeout_1min"
        android:title="@string/adaptive_playback_timeout_1min" />

    <com.android.settings.widget.RadioButtonPreference
        android:key="adaptive_playback_timeout_2mins"
        android:title="@string/adaptive_playback_timeout_2mins" />

    <com.android.settings.widget.RadioButtonPreference
        android:key="adaptive_playback_timeout_5mins"
        android:title="@string/adaptive_playback_timeout_5mins" />

    <com.android.settings.widget.RadioButtonPreference
        android:key="adaptive_playback_timeout_10mins"
        android:title="@string/adaptive_playback_timeout_10mins" />

    <com.android.settingslib.widget.FooterPreference
        android:title="@string/adaptive_playback_summary"
        android:selectable="false" />

</PreferenceScreen>
