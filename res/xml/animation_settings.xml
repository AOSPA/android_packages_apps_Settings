<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/remix_settings_animations_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:key="animation_settings">

    <PreferenceScreen
        android:key="interface_animation_system"
        android:fragment="com.android.settings.AOSPAL.aokp.SystemAnimationInterfaceSettings"
        android:title="@string/system_animation_title"
        android:summary="@string/system_animation_summary" />

    <PreferenceScreen
        android:key="interface_animation_listview"
        android:fragment="com.android.settings.AOSPAL.aokp.ListViewAnimationInterfaceSettings"
        android:title="@string/listview_title"
        android:summary="@string/listview_summary" />

    <PreferenceScreen
        android:key="interface_animation_scroll"
        android:fragment="com.android.settings.AOSPAL.aokp.ScrollAnimationInterfaceSettings"
        android:title="@string/scrolling_title"
        android:summary="@string/scrolling_summary" />

    <PreferenceScreen
        android:key="interface_animation_keyboard"
        android:fragment="com.android.settings.AOSPAL.aokp.KeyboardAnimationInterfaceSettings"
        android:title="@string/ime_animation_title"
        android:summary="@string/ime_animation_summary" />

    <PreferenceCategory
        android:key="more_options"
        android:title="@string/more">

        <ListPreference
            android:key="toast_animation"
            android:title="@string/toast_animation_title"
            android:entries="@array/toast_animation_entries"
            android:entryValues="@array/toast_animation_values"
            android:persistent="false" />

        <ListPreference
            android:key="system_power_crt_mode"
            android:dialogTitle="@string/system_power_crt_mode_dialog_title"
            android:title="@string/system_power_crt_mode_title"
            android:entries="@array/entries_system_power_crt_mode"
            android:entryValues="@array/values_system_power_crt_mode" />

    </PreferenceCategory>

</PreferenceScreen>
